<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Department - <%= dept.name %></title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
  <link href="/css/style.css" rel="stylesheet" />
</head>
<body class="font-sans bg-gray-100 site-root">
  <%- include('partials/navbar-admin') %>

  <div class="site-content">
    <main class="container mx-auto px-4 py-10">
      <a href="/admin/departments" class="text-blue-600 hover:underline">← Back to Departments</a>
      <div class="mt-3 flex items-center justify-between">
        <h1 class="text-2xl font-semibold"><%= dept.name %> <span class="text-gray-500 text-base">(<%= dept.providerName || '—' %>)</span></h1>
      </div>

      <section class="mt-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="bg-white rounded-lg shadow p-4">
          <div class="text-sm text-gray-500">Total Queries</div>
          <div class="mt-1 text-3xl font-bold text-gray-900"><%= metrics.total %></div>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
          <div class="text-sm text-gray-500">Waiting</div>
          <div class="mt-1 text-3xl font-bold text-orange-600"><%= metrics.waiting %></div>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
          <div class="text-sm text-gray-500">Completed</div>
          <div class="mt-1 text-3xl font-bold text-green-600"><%= metrics.completed %></div>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
          <div class="text-sm text-gray-500">Avg Rating</div>
          <div class="mt-1 text-3xl font-bold text-blue-700"><%= metrics.avgRating !== null ? metrics.avgRating.toFixed(2) : '—' %></div>
        </div>
      </section>

      <section class="mt-10 bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold text-gray-800">Assigned Queries</h2>
          <form action="/admin/queries/assign" method="GET" class="hidden"></form>
        </div>
        <% if (queries && queries.length) { %>
          <div class="overflow-x-auto">
            <table class="min-w-full text-left text-sm">
              <thead>
                <tr class="border-b text-gray-600">
                  <th class="py-2 pr-4">Created</th>
                  <th class="py-2 pr-4">Topic</th>
                  <th class="py-2 pr-4">User</th>
                  <th class="py-2 pr-4">Status</th>
                  <th class="py-2 pr-4">ETA</th>
                  <th class="py-2">Rating</th>
                </tr>
              </thead>
              <tbody>
                <% queries.forEach(function(q){ %>
                  <tr class="border-b">
                    <td class="py-2 pr-4"><%= new Date(q.createdAt).toLocaleString() %></td>
                    <td class="py-2 pr-4"><%= q.topic || '-' %></td>
                    <td class="py-2 pr-4"><%= (q.firstName || '') %> <%= (q.lastName || '') %></td>
                    <td class="py-2 pr-4"><%= q.status %></td>
                    <td class="py-2 pr-4"><%= (typeof q.etaMinutes !== 'undefined' && q.etaMinutes !== null) ? (q.etaMinutes + ' min') : '—' %></td>
                    <td class="py-2"><%= (typeof q.rating !== 'undefined' && q.rating !== null) ? (q.rating + '/5') : '—' %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-gray-600">No queries assigned to this department yet.</p>
        <% } %>
      </section>

      <% if (unassigned && unassigned.length) { %>
      <section class="mt-10 bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-800 mb-4">Unassigned Recent Queries</h2>
        <div class="overflow-x-auto">
          <table class="min-w-full text-left text-sm">
            <thead>
              <tr class="border-b text-gray-600">
                <th class="py-2 pr-4">Created</th>
                <th class="py-2 pr-4">Topic</th>
                <th class="py-2 pr-4">User</th>
                <th class="py-2 pr-4">Assign</th>
              </tr>
            </thead>
            <tbody>
              <% unassigned.forEach(function(q){ %>
                <tr class="border-b">
                  <td class="py-2 pr-4"><%= new Date(q.createdAt).toLocaleString() %></td>
                  <td class="py-2 pr-4"><%= q.topic || '-' %></td>
                  <td class="py-2 pr-4"><%= (q.firstName || '') %> <%= (q.lastName || '') %></td>
                  <td class="py-2">
                    <form action="/admin/queries/<%= q._id %>/assign" method="POST" class="inline">
                      <input type="hidden" name="departmentId" value="<%= dept._id %>">
                      <input type="hidden" name="serviceProviderId" value="<%= dept.serviceProviderId %>">
                      <button type="submit" class="text-blue-600 hover:underline">Assign to <%= dept.name %></button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </section>
      <% } %>

    </main>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
