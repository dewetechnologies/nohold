<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin - Departments</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
  <link href="/css/style.css" rel="stylesheet" />
</head>
<body class="font-sans bg-gray-100 site-root">
  <%- include('partials/navbar-admin') %>

  <div class="site-content">
    <main class="container mx-auto px-4 py-10">
      <section class="mb-10 bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between mb-4">
          <h1 class="text-2xl font-semibold">Departments</h1>
        </div>
        <form action="/admin/departments" method="POST" class="grid grid-cols-1 md:grid-cols-4 gap-3 mb-6">
          <div class="md:col-span-2">
            <label class="block text-sm text-gray-600 mb-1">Department Name</label>
            <input type="text" name="name" placeholder="e.g. Billing" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600" required />
          </div>
          <div>
            <label class="block text-sm text-gray-600 mb-1">Service Provider</label>
            <select name="serviceProviderId" class="w-full px-3 py-2 border rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-blue-600" required>
              <option value="" disabled selected>Select provider</option>
              <% providers.forEach(function(p){ %>
                <option value="<%= p._id %>"><%= p.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="md:col-span-4 grid grid-cols-1 md:grid-cols-3 gap-3">
            <div>
              <label class="block text-sm text-gray-600 mb-1">Agent Email (login)</label>
              <input type="email" name="agentEmail" placeholder="agent@example.com" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600" required />
            </div>
            <div>
              <label class="block text-sm text-gray-600 mb-1">Agent First Name</label>
              <input type="text" name="agentFirstName" placeholder="First name" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600" required />
            </div>
            <div>
              <label class="block text-sm text-gray-600 mb-1">Agent Last Name</label>
              <input type="text" name="agentLastName" placeholder="Last name" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600" required />
            </div>
          </div>
          <div class="md:col-span-2">
            <label class="block text-sm text-gray-600 mb-1">Agent Password</label>
            <input type="password" name="agentPassword" placeholder="Set a password" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600" required />
          </div>
          <div class="md:col-span-2 flex items-end">
            <button type="submit" class="w-full md:w-auto bg-blue-600 text-white px-4 py-2 rounded-lg font-semibold hover:bg-blue-700">Create Department</button>
          </div>
        </form>

        <% if (departments && departments.length) { %>
          <div class="overflow-x-auto">
            <table class="min-w-full text-left text-sm">
              <thead>
                <tr class="border-b text-gray-600">
                  <th class="py-2 pr-4">Department</th>
                  <th class="py-2 pr-4">Provider</th>
                  <th class="py-2 pr-4">Queries</th>
                  <th class="py-2 pr-4">Completed</th>
                  <th class="py-2 pr-4">Avg Rating</th>
                  <th class="py-2">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% departments.forEach(function(d){ %>
                  <tr class="border-b">
                    <td class="py-2 pr-4 font-medium text-gray-900"><%= d.name %></td>
                    <td class="py-2 pr-4"><%= d.providerName || '-' %></td>
                    <td class="py-2 pr-4"><%= d.metrics.total %></td>
                    <td class="py-2 pr-4"><%= d.metrics.completed %></td>
                    <td class="py-2 pr-4"><%= d.metrics.avgRating !== null ? d.metrics.avgRating.toFixed(2) : 'â€”' %></td>
                    <td class="py-2">
                      <a href="/admin/departments/<%= d._id %>" class="text-blue-600 hover:underline">View</a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-gray-600">No departments yet.</p>
        <% } %>
      </section>
    </main>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
